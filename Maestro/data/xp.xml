<?xml version="1.0"?>
<XP>
  <stage type="title">
    <label>start</label>
  </stage>
  <stage type="xp">
    <corpus>random</corpus>
    <!-- each agent is added "nb" times in the end -->
    <agent>
      <HR>medium</HR>
      <nb>2</nb>
    </agent>
    <agent>
      <HR>human</HR>
    </agent>
    <nbSentences>4</nbSentences>
    <nbSameValence>2</nbSameValence>
    <likert type="sentence">
      <question>Intensité affective</question>
      <nb>7</nb>
      <from>très désagréable</from>
      <middle>neutre</middle>
      <to>très agréable</to>
    </likert>
    <likert type="agent">
      <question>Jugez-vous l'agent agréable ?</question>
      <nb>7</nb>
      <from>très désagréable</from>
      <middle>neutre</middle>
      <to>très agréable</to>
    </likert>
    <likert type="agent">
      <question>Le trouvez-vous chaleureux ?</question>
      <nb>7</nb>
      <from>pas du tout</from>
      <middle>neutre</middle>
      <to>très chaleureux</to>
    </likert>
    <likert type="agent">
      <question>Vous a-t-il semblé "vivant" ?</question>
      <nb>7</nb>
      <from>pas du tout</from>
      <middle>neutre</middle>
      <to>très vivant</to>
    </likert>
  </stage>
  <stage type="title">
    <label>break</label>
  </stage>
  <stage type="xp">
    <corpus>sequential</corpus>
    <agent>
      <HR>high</HR>
      <nb>1</nb>
    </agent>
    <nbSentences>2</nbSentences>
    <nbSameValence>2</nbSameValence>
  </stage>
  <stage type="title">
    <label>end</label>
  </stage>
</XP>
