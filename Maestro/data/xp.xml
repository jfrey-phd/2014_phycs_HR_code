<?xml version="1.0"?>
<XP>
  <stage type="title">
    <label>start</label>
  </stage>
  <stage type="xp">
    <corpus>random</corpus>
    <!-- each agent is added "nb" times in the end -->
    <agent>
      <HR>medium</HR>
      <nb>2</nb>
    </agent>
    <agent>
      <HR>human</HR>
    </agent>
    <nbSentences>4</nbSentences>
    <nbSameValence>2</nbSameValence>
    <likert type="sentence">
      <question>Valence question?</question>
      <nb>7</nb>
      <from>negative</from>
      <middle>neutral</middle>
      <to>positive</to>
    </likert>
    <likert type="agent">
      <question>Good looking?</question>
      <nb>7</nb>
      <from>not at all</from>
      <middle>neutral</middle>
      <to>very</to>
    </likert>
    <likert type="agent">
      <question>Empathy?</question>
      <nb>7</nb>
      <from>not at all</from>
      <middle>neutral</middle>
      <to>very</to>
    </likert>
  </stage>
  <stage type="title">
    <label>break</label>
  </stage>
  <stage type="xp">
    <corpus>order</corpus>
    <agent>
      <HR>high</HR>
      <nb>1</nb>
    </agent>
    <nbSentences>2</nbSentences>
    <nbSameValence>2</nbSameValence>
  </stage>
  <stage type="title">
    <label>end</label>
  </stage>
</XP>
